        on_click 2 = "exec mpc -h 10.0.1.30 toggle"
        on_click 3 = "exec mpc -h 10.0.1.30 next"
        on_click 4 = "exec mpc -h 10.0.1.30 volume -4"
        on_click 5 = "exec mpc -h 10.0.1.30 volume +4"
